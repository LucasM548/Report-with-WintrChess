{
  "manifest_version": 3,
  "name": "Chess Sites to WintrChess PGN Transfer",
  "version": "1.0",
  "description": "Free analysis of your games on Lichess/Chess.com with WintrChess.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://lichess.org/*",
    "https://www.chess.com/*",
    "https://wintrchess.com/*"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "WintrChess Analyzer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lichess.org/*",
        "https://www.chess.com/*",
        "https://wintrchess.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
