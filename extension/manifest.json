{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "2.0.2",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["storage"],
  "host_permissions": [
    "https://lichess.org/*",
    "https://www.chess.com/*",
    "https://wintrchess.com/*"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "__MSG_extensionActionTitle__"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lichess.org/*",
        "https://www.chess.com/*",
        "https://wintrchess.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  }
}
